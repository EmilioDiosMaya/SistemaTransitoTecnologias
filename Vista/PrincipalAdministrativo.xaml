<Window x:Class="SistemaDelegacionesMunicipales.Vista.PrincipalAdministrativo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaDelegacionesMunicipales.Vista"
        mc:Ignorable="d"
        Title="PrincipalAdministrativo" Height="504" Width="600
        ">
    <Grid >
        <Grid.Background>
            <ImageBrush ImageSource="Imagenes/FondoBlanco.jpg"/>
        </Grid.Background>
        <Rectangle Height="15" Stroke="Black" VerticalAlignment="Top">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FFBAFD07" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Grid Margin="0,15,0,333">
            <Rectangle Margin="0,30" Fill="#FFF1F1F6" Stroke="Black"/>
            <StackPanel Margin="28,0" Orientation="Horizontal" HorizontalAlignment="Left" Width="536">
                <Image HorizontalAlignment="Left" Height="105" VerticalAlignment="Top" Width="85" Source="Imagenes/veracruzlogo.png" Margin="0,10,0,0"/>
                <Label Content="BIENVENIDO ADMINISTRADOR (NOMBRE)" HorizontalAlignment="Left" Margin="0,37,-136,37" VerticalAlignment="Center" Width="450" HorizontalContentAlignment="Center"/>
            </StackPanel>
        </Grid>
        <StackPanel Height="298" Margin="28,140,28,0" VerticalAlignment="Top" Orientation="Horizontal">
            <StackPanel Width="268" HorizontalAlignment="Right">
                <Grid HorizontalAlignment="Right">
                    <Rectangle Fill="#FFCFFFD6" Stroke="Black" Cursor="Arrow" Height="298" RadiusY="19.5" RadiusX="19.5" Margin="0,0,10,0"/>
                    <StackPanel HorizontalAlignment="Left" Height="298" Margin="0,0,10,0" VerticalAlignment="Top" Width="152">
                        <Image Source="Imagenes/vehiculo.png" Height="126" Margin="10,0"/>
                        <Label Content="VEHICULO" HorizontalAlignment="Center" Margin="0,10,0,10" FontWeight="Bold" FontSize="14"/>
                        <Button x:Name="btn_consultarVehiculos" Content="Consultar vehiculos" Height="23" Background="{x:Null}"/>
                        <Button x:Name="btn_agregarVehiculo" Content="Agregar vehiculo" Height="23" Background="{x:Null}"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
            <StackPanel Width="268" HorizontalAlignment="Left">
                <Grid Height="298" HorizontalAlignment="Left" Width="159">
                    <Rectangle Fill="#FFA2D8FD" Stroke="Black" Cursor="Arrow" Height="298" RadiusY="19.5" RadiusX="19.5" Margin="0,0,10,0"/>
                    <StackPanel HorizontalAlignment="Left" Height="298" Margin="0,0,10,0" VerticalAlignment="Top" Width="152">
                        <Image Source="Imagenes/conductor.png" Height="126" Margin="10,0"/>
                        <Label Content="CONDUCTOR" HorizontalAlignment="Center" Margin="0,10,0,10" FontWeight="Bold" FontSize="14"/>
                        <Button x:Name="btn_consultarConductores" Content="Consultar conductores" Height="23" Background="{x:Null}"/>
                        <Button x:Name="btn_agregarConductores" Content="Agregar conductores" Height="23" Background="{x:Null}"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
